{
	"scopeName": "source.vba",
	"fileTypes": [
		".bas",
		".cls",
		".frm"
	],
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#keywords" },
		{ "include": "#numbers" },
		{ "include": "#option" },
		{ "include": "#strings" },
		{ "include": "#types" }
	],
	"repository": {
		"comments": {
			"name": "comment.line.quote",
			"begin": "'",
			"end": "$"
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.conditional.vba",
					"match": "(?i:\\b(Else(If)?|For( Each)?|(I)?If|In|New|Then|To|Step|With)\\b)"
				},
				{
					"name": "keyword.conditional.end.vba",
					"match": "(?i:\\bEnd (If|With)|Next\\b)"
				},
				{
					"name": "keyword.control.vba",
					"match": "(?i:\\b(As|And|By(Ref|Val)|Is|Like|Mod|Not|Optional|Or|Xor)\\b)"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.language.vba",
					"match": "(?i:\\b(Empty|False|Nothing|Null|True)\\b)"
				},
				{
					"name": "constant.numeric.hexadecimal",
					"match": "(?i)&H([0-9A-F]+[_]?)+"
				},
				{
					"name": "constant.numeric.octal",
					"match": "(?i)&O([0-7]+[_]?)+"
				},
				{
					"name": "constant.numeric.binary",
					"match": "(?i)&B([0-1]+[_]?)+"
				},
				{
					"name": "constant.numeric.decimal",
					"match": "[0-9]+\\.[0-9]+(D|R|F)?"
				},
				{
					"name": "constant.numeric.integer",
					"match": "(?i)([0-9]+[_]?)+(UI|UL|US)?"
				}
			]
		},
		"option": {
			"patterns": [
				{
					"name": "storage.type.vba",
					"match": "(?i:\\b(Attribute|End( (Function|Property|Sub))?|((Private|Public|Static) )?(Const|Function|Property|Sub))\\b)"
				},
				{
					"name": "storage.declaration.vba",
					"match": "(?i:\\b(C(all|lass|onst)|Dim|(G|L|S)et|ReDim( Preserve)?)\\b)"
				},
				{
					"name": "storage.modifier.vba",
					"match": "(?i:\\bOption (Base [01]|Compare (Binary|Text)?|Explicit|Private Module)\\b)"
				}
			]
		},
		"strings": {
			"name": "string.quoted",
			"begin": "\"",
			"end": "\""
		},
		"types": {
			"name": "support.type.$1",
			"match": "\\b(Boolean|Byte|Char|Date|Decimal|Double|Integer|Long|Object|SByte|Short|Single|String|UInteger|ULong|UShort)\\b"
		}
	}
}
