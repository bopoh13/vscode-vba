{
	"scopeName": "source.vba",
	"fileTypes": [
		".bas",
		".cls",
		".frm"
	],
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#keywords" },
		{ "include": "#numbers" },
		{ "include": "#option" },
		{ "include": "#strings" },
		{ "include": "#types" },
		{ "include": "#visibility" },
		{ "include": "#reserved-words" }
	],
	"repository": {
		"comments": {
			"name": "comment.line.quote",
			"begin": "'",
			"end": "$"
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.$1.vba",
					"match": "\\b(As|Attribute|Const|Dim|Function|New|Nothing|Set|Sub)\\b"
				},
				{
					"name": "keyword.End.vba",
					"match": "\\bEnd (Sub|Function)\\b"
				},
				{
					"name": "keyword.control.$1.vba",
					"match": "\\b(Each|For|In|Next|With)\\b"
				},
				{
					"name": "keyword.control.End.vba",
					"match": "\\bEnd (With)\\b"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.decimal",
					"match": "([0-9]+)(\\.)([0-9]+)(D|R|F)?"
				},
				{
					"name": "constant.numeric.integer",
					"match": "(([0-9]+)([_]?))+(ui|UI|ul|UL|us|US)?"
				}
			]
		},
		"option": {
			"name": "storage.modifier.option",
			"match": "\\b(Option (Explicit|Private Module|Base|(Compare (Binary|Text)+))?)\\b"
		},
		"strings": {
			"name": "string.quoted",
			"begin": "\"",
			"end": "\""
		},
		"types": {
			"name": "support.type.$1",
			"match": "\\b(Boolean|Byte|Char|Date|Decimal|Double|Integer|Long|Object|SByte|Short|Single|String|UInteger|ULong|UShort)\\b"
		},
		"visibility": {
			"name": "storage.modifier.visibility",
			"match": "\\b(Public|Private|Optional)\\b"
		},
		"reserved-words": {
			"name": "entity.name.function.member.vba",
			"match": "(?i)[\\s]+(A(s|nd|ddressOf|ttribute)|B(y(te|Ref|Val)|ool(ean)?)|C(a(ll|se)|onst|B(ool|yte)|D(bl|ate)|Int|Lng|S(ng|tr))|D(ec(imal|lare)|o(uble)?)|E(ach|(nd|lse)(If)?|num|xit|rase|vent)|F(or|alse|riend|unction)|G(o(Sub|To)|et|lobal)|I(f|s|mplements|n(teger)?)|L(et|o(ng|op)|ike)|Mod|N(e(w|xt)|ot(hing)?)|O(n|r|ption(al)?)|P(ublic|rivate|aram[aA]rray)|R(e(Dim|sume|turn)|aise[eE]vent)|S(ub|e(t|lect)|t(op|atic|ring)|hared|ingle)|T(o|hen|rue|ype(Of)?)|Until|Variant|W(end|hile|ith(Events)?)|Xor)[ =(].*$"
		}
	}
}
